#/bin/bash

DATE=$(date '+%d%m%Y_%H%M%S')
OUTPUT="/home/conor/Videos/tmp/${DATE}.gif"
CMD=""

while test $# != 0
do
    case "$1" in
    -start) CMD+=" -ss $2 "; shift ;;
    -duration) CMD+=" -d $2 "; shift ;;
    -o) OUTPUT="/home/conor/Videos/tmp/${1}.gif"; shift ;;
    esac
    shift
done

echo "ğŸˆOne Gif Coming Up! ğŸˆ"

# add $CMD later

ffmpeg -i $1 -loop 0 $OUTPUT

